<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/userHandID"
        android:layout_width="95dp"
        android:layout_height="match_parent"
        android:text="//userhand" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resultStatus"
            android:textAlignment="center"
            android:layout_width="193dp"
            android:layout_height="30dp"
            android:text="//result"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/playersName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="//players name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/gamedate"
            android:layout_width="193dp"
            android:layout_height="30dp"
            android:text="//gamedate"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/oppoHandID"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="//oppohand" />
    </LinearLayout>

</LinearLayout>